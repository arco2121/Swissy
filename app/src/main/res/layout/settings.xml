<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/settingsBack"
        android:background="@drawable/button_mask"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:src="@drawable/back"
        android:tint="@color/font_color"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/currentstatuslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:clickable="false"
        android:descendantFocusability="afterDescendants"
        android:focusable="false"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_back"
            android:gravity="center|fill"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:text="Theme"/>

            <TextView
                android:id="@+id/settingsTheme"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:background="@drawable/button_mask"
                android:paddingHorizontal="15dp"
                android:text="Mode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill"
            android:background="@drawable/status_back"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textAlignment="textStart"
                android:text="Energy saver"/>

            <TextView
                android:id="@+id/settingsSafe"
                android:layout_width="80dp"
                android:paddingHorizontal="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_mask_tool"
                android:paddingVertical="15dp"
                android:textSize="12sp"
                android:text="Mode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:text="Permissions"/>

            <TextView
                android:id="@+id/openSettings"
                android:layout_width="wrap_content"
                android:paddingHorizontal="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/status_back"
                android:paddingVertical="15dp"
                android:textSize="12sp"
                android:text="Open settings"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill"
            android:background="@drawable/status_back"
            android:layout_marginVertical="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                android:text="Vibration"/>

            <TextView
                android:layout_width="80dp"
                android:paddingHorizontal="15dp"
                android:layout_weight="1"
                android:id="@+id/settingsVibra"
                android:layout_height="wrap_content"
                android:background="@drawable/button_mask"
                android:paddingVertical="15dp"
                android:textSize="12sp"
                android:text="Mode"/>

        </LinearLayout>

        <TextView
            android:id="@+id/openLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_back"
            android:paddingVertical="15dp"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="45dp"
            android:textSize="12sp"
            android:text="View project on Github"/>

    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="false"
        android:descendantFocusability="afterDescendants"
        android:focusable="false"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.8"
        android:textSize="15sp"
        android:text="@string/app_version"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>