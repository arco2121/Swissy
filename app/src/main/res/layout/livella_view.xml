<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="fill_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/livella_cont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintDimensionRatio="1:1">

            <ImageView
                android:id="@+id/livella_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/livella_grid"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/button_mask_tool"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/livellaRo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Roll"
            android:paddingHorizontal="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/livellaPi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Pitch"
            android:paddingHorizontal="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/livellaAzi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Azimuth"
            android:paddingHorizontal="20dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill">

        <TextView
            android:id="@+id/livellaRecalibrate"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_mask_tool"
            android:textSize="13sp"
            android:text="Recalibrate"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:id="@+id/livellaReset"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@drawable/button_mask"
            android:textSize="13sp"
            android:text="Set Target"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

</LinearLayout>