<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="fill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/statusBox"
            android:background="@drawable/status_back"
            android:padding="25dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="start">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/dot_status"
                    app:tint="@color/tool" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dot_status"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/font_color" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dot_status"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/tool_in" />

            </LinearLayout>

            <TextView android:layout_gravity="center"
                android:layout_width="match_parent"
                android:id="@+id/status_temp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="12dp"
                android:layout_marginVertical="5dp"
                android:text="Temperature : ---"/>

            <TextView android:layout_gravity="center"
                android:id="@+id/status_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="12dp"
                android:layout_marginVertical="5dp"
                android:text="Humidity : ---"/>

            <TextView android:layout_gravity="center"
                android:id="@+id/status_pression"
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:padding="12dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Pression : ---"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/statusBox1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_mask"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="end">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/dot_status"
                    app:tint="@color/tool_in" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dot_status"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/font_color" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dot_status"
                    android:layout_marginHorizontal="10dp"
                    app:tint="@color/background" />

            </LinearLayout>

            <TextView android:layout_gravity="center"
                android:id="@+id/status_bri"
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="Brithness : ---"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/status_magne"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginVertical="10dp"
                android:text="Magnetic Interference : Neutral"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/status_alti"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textSize="12dp"
                android:text="Altitude : ---"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/status_pos"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginVertical="10dp"
                android:text="LAT and LONG"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>