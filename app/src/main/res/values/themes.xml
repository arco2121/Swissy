<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Swissy" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/tool</item>
        <item name="colorSecondary">@color/tool_in</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Swissy.Small</item>
        <!--UI-->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ShapeAppearance.Swissy.Small" parent="">
        <item name="cornerSize">20dp</item>
    </style>
    <style name="Theme.Swissy" parent="Base.Theme.Swissy" />
</resources>